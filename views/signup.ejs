<%- include('partials/header') -%>
    <main class="container">
        <div class="row justify-content-center">
            <section class="col-6 mt-5">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                  <div class="columns is-centered">
                    <div class="column is-half">
                        
                        <div class="mb-3">
                          <div class="field">
                            <label for="userName" class="form-label">User Name</label>
                            <div class="control">
                              <input type="text" class="form-control" id="userName" placeholder="Enter your username" name="userName">
                            </div>
                          </div>
                        </div>

                        <div class="mb-3">
                          <div class="field">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <div class="control">
                              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email address" name="email" >
                              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                            </div>
                          </div>
                        </div>

                        <div class="mb-3">
                          <div class="field">
                            <label for="password" class="form-label">Password</label>
                            <div class="control">
                              <input type="password" class="form-control" placeholder="Enter your password" id="password" name="password">
                            </div>
                          </div>
                        </div>

                        <div class="mb-3">
                          <div class="field">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <div class="control">
                              <input type="password" class="form-control" placeholder="Retype your password" id="confirmPassword" name="confirmPassword">
                            </div>
                          </div>
                        </div>

                        <div class="field">
                          <div class="control">
                            <button type="submit" class="button is-primary is-rounded is-large">Submit</button>
                          </div>
                        </div>

                      </div>
                    </div>
                  </form>
            </section>
        </div>
    </main>

<%- include('partials/footer') -%>