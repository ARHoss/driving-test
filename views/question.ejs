<%- include('partials/header') -%>


<div class="columns">
    <div class="column">
        
        <div class="card">
            <div class="card-content">
                <h2 class="title has-text-centered"><%= question.title %></h2>
                <h3 id="answer" class="subtitle has-text-centered is-hidden"><%= question.answer %></h3>
            </div>
        </div>

        <div class="card">
            <div class="card-content">
                <div class="buttons is-centered">
                    <a href="#" id="showAnswer" class="button is-info">
                        <i id="answerIcon" class="fa fa-eye"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-content">
                <div class="buttons is-centered">
                    <form
                        class="col-1"
                        action="/question/completedQuestion/<%= question._id %>?_method=PUT"
                        method="POST"
                    >
                        <button class="button markComplete fa fa-check <%= markComplete %>" type="submit"></button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-content">
                <div class="buttons is-centered is-flex is-justify-content-space-between">
                    <a href="/question/previousQuestion/<%= question._id %>" class="">
                        <i class="fa fa-angle-left"></i>
                        <span class="is-size-5">Left</span>
                        <% if (messages.previousQuestionError) { %>   
                            <span class="notification is-warning">
                              <%= messages.previousQuestionError.pop() %>
                            </span>
                        <% } %> 
                    </a>
                    <a href="/question/nextQuestion/<%= question._id %>" class="">
                        <% if (messages.nextQuestionError) { %>   
                              <span class="notification is-warning">
                                <%= messages.nextQuestionError.pop() %>
                              </span>
                        <% } %> 
                        <span class="is-size-5">Right</span>
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-content">
                <div class="buttons is-centered">
                    <form
                        class="col-1 <%= user.role %>"
                        action="/question/deleteQuestion/<%= question._id %>?_method=DELETE"
                        method="POST"
                    >
                        <button class="button is-danger showTrashIcon fa fa-trash" type="submit"></button>
                    </form>
                </div>
            </div>
        </div>
    
    </div>
</div>
</div>



<%- include('partials/footer') -%>
